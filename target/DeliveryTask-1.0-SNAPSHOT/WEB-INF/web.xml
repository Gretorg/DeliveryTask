<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ServletNewUser</servlet-name>
        <servlet-class>Servlets.login.ServletNewUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>Servlets.login.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletHomePage</servlet-name>
        <servlet-class>Servlets.user.ServletHomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDeliveryPrice</servlet-name>
        <servlet-class>Servlets.user.ServletDeliveryPrice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletArrangeDelivery</servlet-name>
        <servlet-class>Servlets.user.ServletArrangeDelivery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletShowConfirmForm</servlet-name>
        <servlet-class>Servlets.user.ServletShowConfirmForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletConfirmDelivery</servlet-name>
        <servlet-class>Servlets.user.ServletConfirmDelivery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogout</servlet-name>
        <servlet-class>Servlets.login.ServletLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMyOrders</servlet-name>
        <servlet-class>Servlets.user.ServletMyOrders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletShowUsersOrders</servlet-name>
        <servlet-class>Servlets.admin.ServletShowUsersOrders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUpdateOrder</servlet-name>
        <servlet-class>Servlets.admin.ServletUpdateOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PayForOrder</servlet-name>
        <servlet-class>Servlets.user.ServletPayForOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowReport</servlet-name>
        <servlet-class>Servlets.admin.ServletShowReport</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveReport</servlet-name>
        <servlet-class>Servlets.admin.ServletSaveReport</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeLanguage</servlet-name>
        <servlet-class>Servlets.user.ServletLanguage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowUsersOrdersPagination</servlet-name>
        <servlet-class>Servlets.admin.ServletShowOrdersPagination</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletNewUser</servlet-name>
        <url-pattern>/newUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletHomePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDeliveryPrice</servlet-name>
        <url-pattern>/price</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletArrangeDelivery</servlet-name>
        <url-pattern>/arrangeDelivery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletShowConfirmForm</servlet-name>
        <url-pattern>/showConfirmForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConfirmDelivery</servlet-name>
        <url-pattern>/confirmDelivery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMyOrders</servlet-name>
        <url-pattern>/myOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletShowUsersOrders</servlet-name>
        <url-pattern>/showUserOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUpdateOrder</servlet-name>
        <url-pattern>/updateOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PayForOrder</servlet-name>
        <url-pattern>/payForOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowReport</servlet-name>
        <url-pattern>/showReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveReport</servlet-name>
        <url-pattern>/saveReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeLanguage</servlet-name>
        <url-pattern>/changeLanguage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowUsersOrdersPagination</servlet-name>
        <url-pattern>/showUserOrdersPagination</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>Filters.FilterLogin</filter-class>
    </filter>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>Filters.FilterAuthorization</filter-class>
    </filter>
    <filter>
        <filter-name>AuthorizationAdmin</filter-name>
        <filter-class>Filters.FilterAuthorizationAdmin</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/arrangeDelivery</url-pattern>
        <url-pattern>/showConfirmForm</url-pattern>
        <url-pattern>/confirmDelivery</url-pattern>
        <url-pattern>/myOrders</url-pattern>
        <url-pattern>/payForOrder</url-pattern>
        <url-pattern>/arrangeDelivery.jsp</url-pattern>
        <url-pattern>/confirmDelivery.jsp</url-pattern>
        <url-pattern>/myOrders.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationAdmin</filter-name>
        <url-pattern>/findReport</url-pattern>
        <url-pattern>/saveReport</url-pattern>
        <url-pattern>/showReport</url-pattern>
        <url-pattern>/showUserOrders</url-pattern>
        <url-pattern>/updateOrder</url-pattern>
        <url-pattern>/reportsPage.jsp</url-pattern>
        <url-pattern>/userOrders.jsp</url-pattern>
        <url-pattern>/showUserOrdersPagination</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>Listeners.ListenerContext</listener-class>
    </listener>
    <listener>
        <listener-class>Listeners.ListenerLogger</listener-class>
    </listener>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>

    <!-- this way we set the default locale (optional) -->
    <!-- the (preferable) browser's locale will be used if we don't set the default locale -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>ru</param-value>
    </context-param>

    <!-- supported locales -->
    <context-param>
        <param-name>locales</param-name>
        <param-value>ru en</param-value>
    </context-param>


</web-app>